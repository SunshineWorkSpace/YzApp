<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/authmoney_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商铺会员升级消保金"
        android:textColor="@color/colorGray"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/authmoney_tv_money"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/line_color"
        android:gravity="center"
        android:text="299元"
        android:textColor="@color/colorBlack"
        android:textSize="15dp" />

    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择支付方式"
        android:textColor="@color/colorGray"
        android:textSize="16dp" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/authmoney_btn_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/home_item_top_shape"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_pay_wechat" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="微信支付"
                android:textColor="@color/colorGray"
                android:textSize="17dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="推荐安装微信5.0及以上版本的用户使用"
                android:textColor="@color/colorGray"
                android:textSize="14dp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/authmoney_cb_wechat"
            style="@null"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/authmoney_cb_selector"
            android:button="@null"
            android:checked="true"
            android:clickable="false"
            android:enabled="false"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/authmoney_btn_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/home_item_top_shape"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_pay_alipay" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="支付宝支付"
                android:textColor="@color/colorGray"
                android:textSize="17dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="推荐有支付宝账号的人使用"
                android:textColor="@color/colorGray"
                android:textSize="14dp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/authmoney_cb_alipay"
            style="@null"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/authmoney_cb_selector"
            android:button="@null"
            android:checked="false"
            android:clickable="false"
            android:enabled="false"
            android:textSize="12dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/authmoney_btn_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/details_book_btn_shape_blue"
        android:gravity="center"
        android:text="立即支付"
        android:textColor="@color/colorWhite"
        android:textSize="14dp" />
</LinearLayout>
