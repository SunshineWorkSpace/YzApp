<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="薪酬"
            android:textColor="@color/colorGray"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/price_et_input"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/details_tv_shape"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/colorGray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元/"
            android:textColor="@color/colorGray"
            android:textSize="14dp" />

        <FrameLayout
            android:id="@+id/price_btn_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <CheckBox
                android:id="@+id/price_cb_day"
                style="@null"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/workedit_left_selector"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:enabled="false"
                android:gravity="center"
                android:text="天"
                android:textColor="@drawable/workedit_text_selector"
                android:textSize="12dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/price_btn_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-1dp">

            <CheckBox
                android:id="@+id/price_cb_project"
                style="@null"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/workedit_right_selector"
                android:button="@null"
                android:checked="false"
                android:clickable="false"
                android:enabled="false"
                android:gravity="center"
                android:text="项目"
                android:textColor="@drawable/workedit_text_selector"
                android:textSize="12dp" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#EEEEEE" />

    <TextView
        android:id="@+id/price_tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="温馨提示：该作品原薪酬：2/项目"
        android:textColor="@color/colorRed"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/price_btn_submit"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorLanse"
        android:gravity="center"
        android:text="提交修改"
        android:textColor="@color/colorWhite"
        android:textSize="15dp" />
</LinearLayout>
