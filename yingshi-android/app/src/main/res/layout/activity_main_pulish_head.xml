<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/publish_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e8e8e8"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <com.yingshixiezuovip.yingshi.custom.MainImageView
            android:id="@+id/publish_iv_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="#e8e8e8" />

        <LinearLayout
            android:id="@+id/publish_cover_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="一张好的封面可以让阅读直接上升哦"
                android:textColor="#808080"
                android:textSize="18dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/publish_buttom_shape"
                android:gravity="center"
                android:text="编辑封面"
                android:textColor="@color/colorLanse"
                android:textSize="16dp" />
        </LinearLayout>
    </FrameLayout>


    <EditText
        android:id="@+id/publish_et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#e8e8e8"
        android:gravity="top"
        android:hint="输入标题（必填）"
        android:lineSpacingMultiplier="1.2"
        android:maxLength="20"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:textColor="@color/colorBlack"
        android:textColorHint="#b7b7bd"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
</LinearLayout>
