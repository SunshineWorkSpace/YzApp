<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/orderdetails_status_1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDDDDD"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="修改订单日期和价格"
            android:textColor="@color/colorBlack"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/detailsbook_btn_choiceDate"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:background="@color/line_color"
            android:gravity="center"
            android:text="修改订单日期"
            android:textColor="@color/colorGray"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/detailsbook_btn_choicePrice"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@color/line_color"
            android:gravity="center"
            android:text="修改订单价格"
            android:textColor="@color/colorGray"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#DDDDDD"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="提交订单（温馨提示:先和买家沟通确认哦）"
                android:textColor="@color/colorBlack"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="温馨提示:此订单完成后要收取平台服务费2%和推荐人抽取0.5%"
                android:textColor="@color/colorBlack"
                android:textSize="12dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/orderdetails_btn_submit"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:background="@color/line_color"
            android:gravity="center"
            android:text="确认接单"
            android:textColor="@color/colorGray"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/orderdetails_status_2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/line_color"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="订单"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/orderdetails_tv_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingMultiplier="1.4"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="订单号：20123131231321\n购买用户名称：宝宝"
                android:textColor="@color/colorBlack"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/orderdetails_status_2_lin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/line_color"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/orderdetails_book_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.4"
                android:lines="1"
                android:text="预订档期：2017-02-13"
                android:textColor="@color/colorGray"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/orderdetails_tv_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.4"
                android:lines="1"
                android:text="买家联系电话：13800138000"
                android:textColor="@color/colorGray"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/orderdetails_tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/line_color"
            android:gravity="center"
            android:lineSpacingMultiplier="1.4"
            android:padding="10dp"
            android:text="正在接单中..."
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/orderdetails_tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#dddddd"
            android:gravity="center"
            android:lineSpacingMultiplier="1.4"
            android:padding="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="温馨提示：完成指定任务，请联系对方，让对方确认订单完成"
            android:textColor="@color/colorGray"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/orderdetails_btn_finish"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/line_color"
            android:ellipsize="middle"
            android:gravity="center"
            android:lineSpacingMultiplier="1.4"
            android:lines="1"
            android:visibility="gone"
            android:padding="10dp"
            android:text="如完成订单，请点击确认"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>
