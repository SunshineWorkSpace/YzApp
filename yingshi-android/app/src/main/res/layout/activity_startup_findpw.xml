<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_background"
    android:gravity="right"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/findpw_btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:gravity="center">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="20dp"
            android:src="@mipmap/login_back" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:background="@drawable/login_edittext_shape"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <EditText
            android:id="@+id/findpw_et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="请输入注册手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@android:color/white"
            android:textColorHint="#EEEEEE"
            android:textSize="14dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/findpw_btn_getcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="21dp"
        android:paddingBottom="21dp"
        android:paddingLeft="21dp"
        android:paddingTop="21dp"
        android:text="获取验证码"
        android:textColor="@android:color/holo_red_light"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:background="@drawable/login_edittext_shape"
        android:gravity="center_vertical"
        android:paddingLeft="15dp">

        <EditText
            android:id="@+id/findpw_et_verifcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textColorHint="#EEEEEE"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_edittext_shape"
        android:gravity="center_vertical"
        android:paddingLeft="15dp">

        <EditText
            android:id="@+id/findpw_et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="#EEEEEE"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/findpw_btn_visible"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/invisible_icon" />
    </LinearLayout>


    <TextView
        android:id="@+id/findpw_btn_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_btn_shape"
        android:gravity="center"
        android:text="立即找回"
        android:textColor="@android:color/white" />
</LinearLayout>
