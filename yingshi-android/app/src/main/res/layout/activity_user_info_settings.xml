<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/uinfo_price_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="薪酬"
                android:textColor="@color/colorGray"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/uinfo_et_price"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/details_tv_shape"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/colorGray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元/"
                android:textColor="@color/colorGray"
                android:textSize="14dp" />

            <FrameLayout
                android:id="@+id/uinfo_btn_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">

                <CheckBox
                    android:id="@+id/uinfo_cb_day"
                    style="@null"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/workedit_left_selector"
                    android:button="@null"
                    android:checked="true"
                    android:clickable="false"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="天"
                    android:textColor="@drawable/workedit_text_selector"
                    android:textSize="12dp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/uinfo_btn_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-1dp">

                <CheckBox
                    android:id="@+id/uinfo_cb_project"
                    style="@null"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/workedit_right_selector"
                    android:button="@null"
                    android:checked="false"
                    android:clickable="false"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="项目"
                    android:textColor="@drawable/workedit_text_selector"
                    android:textSize="12dp" />
            </FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#EEEEEE" />

        <TextView
            android:id="@+id/uinfo_tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="原始薪酬：2元/天"
            android:textColor="@color/colorRed"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/uinfo_invite_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/uinfo_et_invite"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/uinfo_invite_shape"
            android:gravity="center_vertical"
            android:hint="输入邀请码"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorGray"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/uinfo_invite_btn_submit"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:background="@color/line_color"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/colorGray"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/uinfo_base_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="实名"
                android:textColor="#888"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/uinfo_et_nickname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="请输入姓名"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/colorGray"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="性别"
                android:textColor="#888"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/uinfo_tv_sex"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="男 / 女"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/colorGray"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="职业"
                android:textColor="#888"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/uinfo_et_position"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="请输入职业（如：演员）"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/colorGray"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="毕业院校"
                android:textColor="#888"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/uinfo_et_school"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="请输入院校名称"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/colorGray"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="当前城市"
                android:textColor="#888"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/uinfo_tv_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="省 / 市 / 区（县）"
                android:textColor="@color/colorGray"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="出生日"
                android:textColor="#888"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/uinfo_tv_birth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="2017/5/17"
                android:textColor="@color/colorGray"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="电话"
                android:textColor="#888"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/uinfo_et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="请输入手机号码"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/colorGray"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />
    </LinearLayout>
</LinearLayout>
