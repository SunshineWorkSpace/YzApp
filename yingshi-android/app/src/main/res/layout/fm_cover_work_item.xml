<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:visibility="visible">

    <View
        android:id="@+id/homeitem_type_2_line"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#f5f5f5"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/homeitem_type_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:visibility="gone"
            android:paddingRight="15dp">

            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="55dp">

                <com.yingshixiezuovip.yingshi.quote.roundview.RoundedImageView
                    android:id="@+id/homeitem_iv_head"
                    app:riv_oval="true"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/default_head" />

                <ImageView
                    android:id="@+id/homeitem_iv_auth"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="5dp"
                    android:src="@mipmap/auth_company" />
            </FrameLayout>

            <TextView
                android:id="@+id/homeitem_tv_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="刘文渊"
                android:textColor="@color/colorBlack"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/homeitem_tv_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="推荐人：爷是个孩子"
                android:textColor="@color/main_font_gray_color"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/homeitem_cb_follow"
                style="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/home_follow_shape"
                android:button="@null"
                android:checked="false"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:text="已关注"
                android:textColor="@drawable/follow_text_selector"
                android:textSize="12dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.yingshixiezuovip.yingshi.custom.MainImageView
                android:id="@+id/homeitem_iv_image_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/buffer" />

            <TextView
                android:id="@+id/homeitem_tv_title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:text="环上大影视圈"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"
                android:textStyle="bold" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">


                <RelativeLayout
                    android:id="@+id/homeitem_btn_zan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/homeitem_iv_zan"
                        android:layout_width="18dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:src="@mipmap/notice_icon_heart" />

                    <TextView
                        android:id="@+id/homeitem_tv_zan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@+id/homeitem_iv_zan"
                        android:text="1"
                        android:textColor="@color/colorLanse"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/homeitem_tv_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/homeitem_tv_zan"
                        android:text="背书"
                        android:textColor="@color/colorBlack"
                        android:textSize="12dp" />
                    F
                </RelativeLayout>


                <TextView
                    android:id="@+id/homeitem_tv_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="￥1元/天"
                    android:textColor="@color/colorOrange"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/homeitem_tv_book"
                    android:layout_width="62.5dp"
                    android:layout_height="32.5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:background="@drawable/home_item_shape"
                    android:text="预定档期"
                    android:textColor="@color/colorWhite"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>