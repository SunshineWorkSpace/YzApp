<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <com.yingshixiezuovip.yingshi.quote.roundview.RoundedImageView
            android:id="@+id/follow_iv_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_head"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/follow_tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Resmic"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp" />

                <CheckBox
                    android:id="@+id/follow_cb_follow"
                    style="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/home_item_top_shape"
                    android:button="@null"
                    android:checked="false"
                    android:paddingBottom="3dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="3dp"
                    android:text="+关注"
                    android:textColor="@drawable/follow_text_selector"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/follow_tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="职位：演员"
                android:textColor="@color/colorGray"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/follow_tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="出生：北京市  通州"
                android:textColor="@color/colorGray"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/follow_tv_crtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="关注时间：2017-04-14 10:45:59"
                android:textColor="@color/colorGray"
                android:textSize="13dp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/line_color" />
</LinearLayout>