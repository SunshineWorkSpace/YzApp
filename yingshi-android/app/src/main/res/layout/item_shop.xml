<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/icons">
    <View
        android:id="@+id/details_webview"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_below="@+id/details_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <com.yingshixiezuovip.yingshi.widget.ScaleImageView
        android:id="@+id/iv_shop"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:layout_marginBottom="23dp"
        android:scaleType="centerCrop"/>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorLanse"
        >
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.00"
            android:textSize="14sp"
            android:textColor="@color/icons"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"/>
    </RelativeLayout>
    <com.yingshixiezuovip.yingshi.quote.roundview.RoundedImageView
        android:id="@+id/iv_user_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/blankpage_no_data"
        app:riv_oval="true" />
</FrameLayout>

    </RelativeLayout>
</RelativeLayout>