<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DDDDDD"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/works_tv_author"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="刘文渊"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/works_iv_background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorWhite"
        android:scaleType="centerCrop"
        android:src="@mipmap/mine_bg" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingBottom="10dp"

        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/works_btn_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/homeitem_tv_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="背书"
                    android:textColor="@color/main_font_gray_color"
                    android:textSize="11dp" />

                <ImageView
                    android:id="@+id/homeitem_iv_zan"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/notice_icon_heart" />

                <TextView
                    android:id="@+id/works_tv_zan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textColor="@color/main_font_gray_color"
                    android:textSize="11dp" />
            </LinearLayout>

            <View
                android:id="@+id/homeitem_tv_price"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/homeitem_iv_message"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:src="@mipmap/icon_message" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="用户点评"

                android:textColor="@color/main_font_gray_color"
                android:textSize="11dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>