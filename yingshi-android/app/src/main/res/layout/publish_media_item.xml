<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/media_iv_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/mine_bg" />

        <ImageView
            android:id="@+id/media_iv_delete"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="right"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_publish_delete" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/line_color"
        android:orientation="vertical">

        <EditText
            android:id="@+id/media_et_desc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="添加图片描述"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/media_et_position"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="添加（作品中的职位）"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>